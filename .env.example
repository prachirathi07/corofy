# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED - Supabase Database
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ============================================
# REQUIRED - OpenAI (Email Generation)
# ============================================
OPENAI_API_KEY=sk-proj-your-openai-api-key

# ============================================
# REQUIRED - Firecrawl (Website Scraping)
# ============================================
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key

# ============================================
# REQUIRED - n8n Webhook (Email Sending)
# ============================================
N8N_WEBHOOK_URL=https://n8n.srv963601.hstgr.cloud/webhook/your-webhook-id

# ============================================
# OPTIONAL - Apollo (Lead Scraping)
# ============================================
APOLLO_API_KEY=

# ============================================
# OPTIONAL - Apify (Alternative Lead Scraping)
# ============================================
APIFY_API_TOKEN=
APIFY_ACTOR_ID=

# ============================================
# OPTIONAL - Gmail API (Direct Gmail Access)
# ============================================
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_USER_EMAIL=

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
API_BASE_URL=http://localhost:8000

# Business Hours (24-hour format)
BUSINESS_HOUR_START=9
BUSINESS_HOUR_END=18
